{
    "name": "Terminal",
    "short_name": "Terminal",
    "description": "Windows 11 风格的现代化终端应用",
    "start_url": "/",
    "display": "standalone",
    "background_color": "#0c0c0c",
    "theme_color": "#1c1c1c",
    "orientation": "any",
    "id": "terminal-pwa",
    "categories": [
        "utilities",
        "development"
    ],
    "icons": [
        {
            "src": "/favicon.ico",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "any maskable"
        }
    ],
    "shortcuts": [
        {
            "name": "新建终端",
            "short_name": "新建",
            "description": "打开新的终端实例",
            "url": "/favicon.ico",
            "icons": [
                {
                    "src": "/icon-192.png",
                    "sizes": "192x192"
                }
            ]
        }
    ],
    "launch_handler": {
        "client_mode": "navigate-new"
    },
    "display_override": [
        "window-controls-overlay",
        "standalone"
    ],
    "protocol_handlers": [
        {
            "protocol": "web+terminal",
            "url": "/?terminal=%s"
        }
    ]
